<tr>
  <td>
    <%= button_to "投給這位", vote_candidate_path(candidate), method: :post,
    data:{confirm: "確定投票給這個人?"} %>
  </td>
  <td><%= candidate.name %>(年齡 : <%= candidate.age %>歲)</td>
  <td><%= candidate.party %></td>
  <td><%= candidate.politics %></td>
  <td><%= candidate.vote_logs.size %></td>
  <td>
    <%= link_to "編輯", edit_candidate_path(candidate) %> <%= link_to "刪除",
    candidate_path(candidate), method: :delete, data: {confirm: "確認刪除"} %>
  </td>
</tr>
